<body>

  <h1>üöÄ Product Sniper</h1>
  <p>Paste a product link and analyze it.</p>

  <input
    id="link"
    type="text"
    placeholder="Paste product link here"
  >

  <button id="analyzeBtn" onclick="analyze()">Analyze</button>

<div id="loading" class="hidden">
  <div class="spinner"></div>
  <span>Analyzing...</span>
</div>

<div id="result"></div>


  <div id="result-box">
    <div id="score"></div>
    <div id="verdict"></div>
    <div id="reason"></div>
  </div>

<script>


async function analyze() {

  const input = document.getElementById("link");
  const btn = document.getElementById("analyzeBtn");
  const result = document.getElementById("result");
  const loading = document.getElementById("loading");

  const link = input.value.trim();

  if (!link) {
    alert("Please paste a link first.");
    return;
  }

  // UI ON
  btn.disabled = true;
  btn.innerText = "Working...";
  loading.classList.remove("hidden");
  result.innerText = "";

  try {

    const res = await fetch(
      `/analyze?link=${encodeURIComponent(link)}`
    );

    if (!res.ok) {
      throw new Error("Server error");
    }

    const data = await res.json();

    console.log("SERVER DATA:", data);

    showResult(data);

  } catch (err) {

    console.error(err);

    result.innerText = "‚ùå Server error.";

  } finally {

    // ALWAYS reset UI
    btn.disabled = false;
    btn.innerText = "Analyze";
    loading.classList.add("hidden");

  }
}


function showResult(data) {

  console.log("RAW DATA:", data);

  if (!data || !data.analysis) {
    document.getElementById("result").innerText =
      "‚ùå No analysis returned.";
    return;
  }

  let analysis = data.analysis;

  // If backend sent string ‚Üí convert to object
  if (typeof analysis === "string") {
    try {
      analysis = JSON.parse(analysis);
    } catch (e) {
      console.error("Parse error:", e);
      document.getElementById("result").innerText =
        "‚ùå Analysis parse error.";
      return;
    }
  }

  // Validate fields
  if (
    analysis.total === undefined ||
    analysis.verdict === undefined ||
    analysis.reason === undefined
  ) {
    console.error("Bad analysis:", analysis);
    document.getElementById("result").innerText =
      "‚ùå Invalid analysis format.";
    return;
  }

  // Safe to display now
  const total = analysis.total;
  const verdict = analysis.verdict;
  const reason = analysis.reason;

  document.getElementById("score").innerText =
    "Score: " + total + " / 10";

  const verdictBox =
    document.getElementById("verdict");

  verdictBox.innerText =
    "Verdict: " + verdict;

  if (verdict === "SCALE") {
    verdictBox.style.color = "lime";
  } else if (verdict === "TEST") {
    verdictBox.style.color = "orange";
  } else {
    verdictBox.style.color = "red";
  }

  document.getElementById("reason").innerText =
    "Reason: " + reason;
}

</script>


